<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.*?>

<fx:root resizable="false" title="FinBook (Locked)" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/lock_icon.png" />
    </icons>
    <scene>
        <Scene fx:id="parent">
            <stylesheets>
                <URL value="@DarkTheme.css" />
            </stylesheets>
            <StackPane fx:id="lockWindowBackground" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <StackPane>
                    <VBox spacing="10.0">
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <Label fx:id="headerText" text="Welcome back to FinBook!" GridPane.columnIndex="0" GridPane.columnSpan="2147483647" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
                            <Label fx:id="passwordText" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        </GridPane>
                        <StackPane>
                            <Button fx:id="unlockBtn" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#unlock" text="Unlock" StackPane.alignment="CENTER" />
                        </StackPane>
                    </VBox>
                </StackPane>
            </StackPane>
        </Scene>
    </scene>
</fx:root>
